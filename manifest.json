{
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": ["https://germs.io/*"],
            "js": ["content.js"]
        }
    ],

    "description": "Simple and configurable multiboxing script, designed for Germs.io!",

    "icons": {
        "48": "images/gsDuhFox-48.png",
        "96": "images/gsDuhFox-96.png"
    },

    "manifest_version": 2,

    "name": "Germsfox",

    "version": "0.1",
    
    "browser_action": {
        "default_icon": {
            "19": "images/gsDuhFox-19.png",
            "38": "images/gsDuhFox-38.png"
        },
        "default_title": "Germsfox",
        "default_popup": "popup.html"
    },

    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "https://i.imgur.com/*",
        "https://germs.io/*"
    ],
    
    "web_accessible_resources": [
        "fonts/*"
    ]
}